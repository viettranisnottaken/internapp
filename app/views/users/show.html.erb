<h1>My profile</h1>
<div class="card">
  <div class="card-header">
    My info
  </div>
  <div class="card-body">
    <p>Name: <%= @user.username %></p>
    <p>Age: <%= @user.age %></p>
    <p>Address: <%= @user.address %></p>
    <p>Phone Number: <%= @user.phone_num %></p>
  </div>
</div>

<h2>My CVs</h2>
<div class="row">
  <% @user.cvs.each do |c| %>
    <div class="col-md-3">
      <div class="card">
        <%= image_tag c.filename.preview(size: "150x300"), class: "card-img-top"%>
        <div class="card-body">
          <p><%= link_to "Download this CV", rails_blob_path(c.filename, disposition: 'attachment') %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>
