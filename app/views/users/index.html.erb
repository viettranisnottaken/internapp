<h1>All Users</h1>

<div class="row">
  <div class="col-md-4">
    <%= form_tag users_path, method: :get, class: "navbar-form navbar-left search-form" do %>
      <%= text_field_tag(
          :search,
          params[:search],
          placeholder: "Search"
      ) %>
      <%= submit_tag("Search", class: "btn btn-primary") %>
    <% end %>
  </div>
</div>

<p><%= link_to "Back to users list", users_path %></p>

<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th scope="col">Username</th>
      <th scope="col">Email</th>
      <th scope="col">CV Download</th>
    </tr>
  </thead>
  <% @users.each do |n| %>
  <tbody>
    <tr>
      <td><%= n.username %></td>
      <td><%= n.email %></td>
      <td>
        <% n.cvs.each do |c| %>
          <p><%= link_to "Download this CV", rails_blob_path(c.filename, disposition: 'attachment') %></p>
        <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>
</table>
